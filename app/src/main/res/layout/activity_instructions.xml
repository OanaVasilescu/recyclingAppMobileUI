<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.InstructionsActivity">

    <include layout="@layout/content_instructions"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/goHomeBtn"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="Go Home"
            android:layout_alignParentStart="true"
            android:layout_marginStart="4dp"/>

        <Button
            android:id="@+id/reScanButton"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="Scan another \nbarcode"
            android:textColor="@color/baby_powder_white"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="4dp"/>
    </RelativeLayout>

</RelativeLayout>